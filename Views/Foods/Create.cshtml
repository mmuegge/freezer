@model Freezer_MVC.Models.Food

@{
    ViewData["Title"] = "Create";
}

<h1>Neu anlegen</h1>

<h4>Lebensmittel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateIn" class="control-label"></label>
                <input asp-for="DateIn" class="form-control" />
                <span asp-validation-for="DateIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BestBeforeDate" class="control-label"></label>
                <input asp-for="BestBeforeDate" asp-format="{0:dd.mm.yyyy}" class="form-control" />
                <span asp-validation-for="BestBeforeDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodSupplierId" class="control-label"></label>
                <select asp-for="FoodSupplierId" class ="form-control" asp-items="ViewBag.FoodSupplierId"></select>
            </div>
            <div class="form-group">
                <label asp-for="FoodGroupId" class="control-label"></label>
                <select asp-for="FoodGroupId" class ="form-control" asp-items="ViewBag.FoodGroupId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Anlegen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Zurück zur Liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
